<Window x:Class="DDO_Launcher.ModSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDO_Launcher"
        mc:Ignorable="d"
        Title="Dragon's Dogma Online Launcher" Height="500" Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="#212121"
            BorderBrush="#FF1F1F1F" 
            BorderThickness="1"
            CornerRadius="8"
            Padding="24" Margin="24,48,24,24">

        <Canvas Margin="-25,-25,-25,-25">

            <StackPanel Canvas.Left="25" Canvas.Top="77" Width="902" HorizontalAlignment="Center" Height="242" VerticalAlignment="Top">

                <Grid Height="64" Width="902" Background="#0CDDDDDD" Margin="0,0,0,6">
                    <!-- Define 2 columns -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width=".15*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Define 2 rows -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Row 1 -->

                        <!-- Row 0 -->
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Top left cell -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Title of mod goes here" Style="{StaticResource ModEntryTitle}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="/path/to/the/mod/zip/file.zip" Style="{StaticResource FilePathTextBlockStyle}" />
            
           

                    <!-- Right cell that spans both rows -->
                    <TextBlock Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Padding="8"/>
                    <Button Content="Reinstall" Grid.Column="1" 
                            Grid.RowSpan="2" HorizontalAlignment="Stretch" 
                            Height="NaN" VerticalAlignment="Stretch" 
                            Padding="12,12,12,12" Margin="12,12,6,12" 
                            Foreground="#FBDDDDDD" BorderBrush="#00707070">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF373737"/>
                                <GradientStop Color="#FF1C1C1C" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <Button HorizontalAlignment="Left" Height="NaN" Margin="0,12,12,0" VerticalAlignment="Top" Width="NaN" Grid.Column="3" MinWidth="20" MinHeight="20" BorderBrush="#00707070" Foreground="#FF707070" VerticalContentAlignment="Top" Padding="1,1,1,1">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF363636"/>
                                <GradientStop Color="#FF1D1D1D" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>

                        <Path Fill="#D3D3D3" 
                              Stretch="Uniform" 
                              Data="M12.75 11.25V5a.75.75 0 0 0-1.5 0v6.25H5a.75.75 0 0 0 0 1.5h6.25V19a.76.76 0 0 0 .75.75a.75.75 0 0 0 .75-.75v-6.25H19a.75.75 0 0 0 .75-.75a.76.76 0 0 0-.75-.75Z" 
                              RenderTransformOrigin="0.495,0.513" 
                              Height="16" 
                              Width="10"
                              >
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-45"/>
                                    <TranslateTransform X="0" Y="0"/>
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>

                    </Button>
                </Grid>
                <Grid Height="64" Width="902" Background="#0CDDDDDD">
                    <!-- Define 2 columns -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width=".15*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Define 2 rows -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Row 1 -->

                        <!-- Row 0 -->
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Top left cell -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Title of mod goes here" Padding="12,12,12,6" FontSize="16" FontFamily="EB Garamond" Foreground="White"/>

                    <!-- Bottom left cell -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="/path/to/the/mod/zip/file.zip" Padding="12,0,12,12" FontSize="10" FontFamily="EB Garamond" Foreground="#66FFFFFF" FontStyle="Italic"/>

                    <!-- Right cell that spans both rows -->
                    <TextBlock Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Padding="8"/>
                    <Button Content="Update" Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Stretch" Height="NaN" VerticalAlignment="Stretch" Padding="12,12,12,12" Margin="12,12,6,12" Foreground="#FF212121" BorderBrush="#00707070">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFEDE83"/>
                                <GradientStop Color="#FFF0B305" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <Button HorizontalAlignment="Left" 
                            Height="NaN" Margin="0,12,12,0" 
                            VerticalAlignment="Top" Width="NaN" 
                            Grid.Column="3" MinWidth="20" 
                            MinHeight="20" BorderBrush="#00707070" 
                            Foreground="#FF707070" VerticalContentAlignment="Top" 
                            Padding="1,1,1,1">

                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF363636"/>
                                <GradientStop Color="#FF1D1D1D" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>


                        <Path Fill="#D3D3D3" 
                              Stretch="Uniform" 
                              Data="M12.75 11.25V5a.75.75 0 0 0-1.5 0v6.25H5a.75.75 0 0 0 0 1.5h6.25V19a.76.76 0 0 0 .75.75a.75.75 0 0 0 .75-.75v-6.25H19a.75.75 0 0 0 .75-.75a.76.76 0 0 0-.75-.75Z" 
                              RenderTransformOrigin="0.495,0.513" 
                              Height="16" 
                              Width="10"
                              >
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-45"/>
                                    <TranslateTransform X="0" Y="0"/>
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>

                    </Button>
                </Grid>
            </StackPanel>
            <Grid Width="902" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Canvas Height="56" Width="451" 
                    Canvas.Top="345" 
                    VerticalAlignment="Top" 
                    Canvas.Left="476" 
                    HorizontalAlignment="Left">
                <TextBlock Style="{StaticResource HeadlineTextBlock}" Text="Client Modifications" Canvas.Left="-454.955" Canvas.Top="-324.027" HorizontalAlignment="Left" VerticalAlignment="Center" Width="425" />

                <Button x:Name="btnMsCancel" 
                        Content="Cancel" Height="56" 
                        Width="220" FontFamily="EB Garamond" 
                        FontSize="14" Foreground="White" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" BorderBrush="#00707070" 
                        Click="btnMsCancel_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="2"
                                            BorderThickness="0"
                                            BorderBrush="Gray">

                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                            <GradientStop Color="#FF5A5A5A"/>
                                                            <GradientStop Color="#FF3F3F3F" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>

                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                            <GradientStop Color="#FF2A2A2A"/>
                                                            <GradientStop Color="#FF1A1A1A" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF494949"/>
                                        <GradientStop Color="#FF1A1A1A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnAddMod" Content="Add Client Modifications" 
                        Height="56" Width="220" 
                        FontFamily="EB Garamond" 
                        FontSize="14" HorizontalAlignment="Left" 
                        VerticalAlignment="Center" BorderBrush="#00707070" Canvas.Left="231">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="3"
                        BorderThickness="0"
                        BorderBrush="Gray">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                            <GradientStop Color="#FFFEEBAA"/>
                                                            <GradientStop Color="#FFF4C600" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>

                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                            <GradientStop Color="#FFE0B000"/>
                                                            <GradientStop Color="#FFB08000" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFFFDF88"/>
                                        <GradientStop Color="#FFEFB101" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>


            </Canvas>
        </Canvas>
    </Border>
</Window>
