<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Core\**" />
    <Compile Remove="MVVM\**" />
    <Compile Remove="Theme\**" />
    <EmbeddedResource Remove="Core\**" />
    <EmbeddedResource Remove="MVVM\**" />
    <EmbeddedResource Remove="Theme\**" />
    <None Remove="Core\**" />
    <None Remove="MVVM\**" />
    <None Remove="Theme\**" />
    <Page Remove="Core\**" />
    <Page Remove="MVVM\**" />
    <Page Remove="Theme\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Fonts\EBGaramond-Regular.ttf" />
    <None Remove="Fonts\Jersey25-Regular.ttf" />
    <None Remove="Images\BtnClose.png" />
    <None Remove="Images\BtnConfig.png" />
    <None Remove="Images\BtnMinimize.png" />
    <None Remove="Images\logo.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Fonts\EBGaramond-Regular.ttf" />
    <Resource Include="Fonts\Jersey25-Regular.ttf" />
    <Resource Include="Images\BtnClose.png" />
    <Resource Include="Images\BtnConfig.png" />
    <Resource Include="Images\BtnMinimize.png" />
    <Resource Include="Images\logo.png" />
  </ItemGroup>

</Project>
