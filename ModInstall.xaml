<Window x:Class="DDO_Launcher.ModSettingsWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:DDO_Launcher"
        mc:Ignorable="d"
        Title="Dragon's Dogma Online Launcher" Height="340" Width="445"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{x:Null}"
        AllowsTransparency="True">
    <Border Background="#E5191A19"
            BorderBrush="#FF1F1F1F" 
            BorderThickness="1"
            CornerRadius="8"
            Padding="24" Margin="0,0,0,5">
        <Grid Margin="-20,-35,-25,-15">
            <StackPanel Canvas.Left="19" Canvas.Top="77" Height="344" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="0.229"/>
                        <RotateTransform/>
                        <TranslateTransform X="-0.746"/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
                <Grid Height="64" Width="377" Background="#0CDDDDDD" Margin="0,80,0,6">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260*" />
                        <ColumnDefinition Width="161*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="66.05" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource ModEntryTitle}" Margin="0,0,0,2" ><Run Language="pt-br" Text="Translation Install"/></TextBlock>

                    <TextBlock Grid.Row="0" Grid.Column="1" Padding="8"/>
                    <Button Content="Install" Grid.Column="1" Height="NaN" Padding="12,12,12,12" Margin="9,10,9,10" Foreground="#FF212121" BorderBrush="#00707070" Style="{StaticResource GoldenButton}">
                    </Button>
                </Grid>
                <Grid Height="64" Width="377" Background="#0CDDDDDD">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260*" />
                        <ColumnDefinition Width="161*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="61.05" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Padding="12,12,12,6" Style="{StaticResource ModEntryTitle}" Margin="0,0,0,-3"><Run Language="pt-br" Text="Mod Install"/></TextBlock>

                    <TextBlock Grid.Row="0" Grid.Column="1" Padding="8"/>
                    <Button Content="Search file..." Grid.Column="1" Height="NaN" Padding="12,12,12,12" Margin="9,9,9,6" Foreground="#FF212121" BorderBrush="#00707070" Style="{StaticResource GoldenButton}">
                    </Button>
                </Grid>
            </StackPanel>
            <TextBlock Style="{StaticResource HeadlineTextBlock}" Text="Client Modifications" Canvas.Top="-338" HorizontalAlignment="Left" VerticalAlignment="Top" Width="227" Canvas.Left="-114" Margin="13,18,0,0" />
            <Button x:Name="btnCancel" Height="56" FontSize="16" Click="btnMsCancel_Click" Style="{StaticResource DarkButton}" Foreground="White" VerticalAlignment="Top" Canvas.Top="342" Margin="100,261,100,0">
                Cancel
            </Button>
        </Grid>
    </Border>
</Window>
