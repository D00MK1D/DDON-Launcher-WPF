<Window x:Name="LauncherWindow" x:Class="DDO_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDO_Launcher"
        mc:Ignorable="d"
        Title="Dragon's Dogma Online Launcher" Height="500" Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">


    <Border x:Name="LauncherBorder" Background="#575555"
            CornerRadius="8">

        <Grid x:Name="LauncherGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="149*"/>
                <RowDefinition Height="351*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="301*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="699*"/>
            </Grid.ColumnDefinitions>



            <Image x:Name="imgLogo" 
                   Source="/Images/logo.png" 
                   IsHitTestVisible="False" 
                   RenderTransformOrigin="0.5,0.5"
                   Grid.Column="0" Margin="0,24,0,4"
                   >
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <Border Background="#FF222222"
                    Margin="10,48,20,20"
                    CornerRadius="8"
                    Grid.Column="2"
                    Grid.RowSpan="2">

            </Border>

            <Border x:Name="Form"
                Background="#FF222222"
                Margin="20,20,10,20"
                CornerRadius="8"
                Grid.Column="0"
                Grid.Row="1">

                <Grid Margin="10,10,10,10">

                    <TextBox x:Name="textAccount" 

                        VerticalAlignment="Top" 
                        TextWrapping="NoWrap" 
                        VerticalContentAlignment="Center"
                        AcceptsReturn="False"
                        AllowDrop="False" 
                        TabIndex="1" 
                        Height="24" 
                        BorderBrush="{x:Null}" 
                        Foreground="#D3D3D3" 
                        Margin="10,22,10,0" 
                        FontFamily="/Fonts/#EB Garamond" 
                        Text="" FontSize="16" 
                        MaxLength="100" MaxLines="1" 
                        BorderThickness="0,0,0,0" 
                        VerticalScrollBarVisibility="Disabled" 
                        UndoLimit="10">

                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="2"/>
                            </Style>
                        </TextBox.Resources>

                        <TextBox.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#494949"/>
                                <GradientStop Color="#1A1A1A" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBox.Background>
                    </TextBox>

                    <TextBox x:Name="textPassword" 
                        TabIndex="2" 
                        AllowDrop="False" 
                        VerticalAlignment="Top" 
                        TextWrapping="NoWrap" 
                        VerticalContentAlignment="Center"
                        AcceptsReturn="False"
                        Height="24" 
                        BorderBrush="{x:Null}" 
                        Foreground="#D3D3D3" 
                        Margin="10,71,10,0" 
                        FontFamily="/Fonts/#EB Garamond" 
                        FontSize="16" 
                        MaxLength="100" 
                        MaxLines="1" 
                        BorderThickness="0,0,0,0" 
                        VerticalScrollBarVisibility="Disabled" 
                        UndoLimit="10">

                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="2"/>
                            </Style>
                        </TextBox.Resources>

                        <TextBox.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#494949"/>
                                <GradientStop Color="#1A1A1A" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBox.Background>

                    </TextBox>

                    <Button x:Name="btnSubmit" 
                        Content="Login" 
                        Margin="10,207,10,0" TabIndex="4" 
                        Click="btnSubmit_Click" 
                        FontFamily="/Fonts/#EB Garamond" 
                        BorderThickness="0,0,0,0" 
                        FontSize="24" Height="43" VerticalAlignment="Top">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="3"
                                                BorderThickness="0"
                                                BorderBrush="Gray">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                                <GradientStop Color="#FFFEEBAA"/>
                                                                <GradientStop Color="#FFF4C600" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>

                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                                <GradientStop Color="#FFE0B000"/>
                                                                <GradientStop Color="#FFB08000" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFFDF88"/>
                                            <GradientStop Color="#FFEFB101" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>

                    </Button>

                    <Button x:Name="btnChangeAction" 
                        Content="Register" 
                        Margin="10,259,10,0" TabIndex="5" 
                        Click="btnChangeAction_Click" 
                        FontFamily="/Fonts/#EB Garamond" 
                        BorderThickness="0,0,0,0" 
                        Foreground="#FFB1B1B1" Height="24" VerticalAlignment="Top">


                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="2"
                            BorderThickness="0"
                            BorderBrush="Gray">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                <GradientStop Color="#FF5A5A5A"/>
                                                                <GradientStop Color="#FF3F3F3F" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>

                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                <GradientStop Color="#FF2A2A2A"/>
                                                                <GradientStop Color="#FF1A1A1A" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF494949"/>
                                            <GradientStop Color="#FF1A1A1A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>

                    </Button>

                    <Label x:Name="labelAccount" 
                       Content="Account Name" 
                       Margin="6,-3,10,0" 
                       VerticalAlignment="Top" 
                       Foreground="#FFB1B1B1" 
                       FontFamily="EB Garamond" 
                       FontSize="14" Height="32"/>

                    <Label x:Name="labelPassword" 
                       Content="Password" 
                       Margin="6,46,10,0" 
                       VerticalAlignment="Top" 
                       FontFamily="EB Garamond" 
                       FontSize="14" Foreground="#FFB1B1B1" Height="32"/>

                    <Label x:Name="labelServer" 
                       Content="Server" 
                       Margin="0,94,10,0" 
                       FontFamily="EB Garamond" 
                       FontSize="14" 
                       Height="32" 
                       VerticalAlignment="Top" 
                       Foreground="#FFB1B1B1" HorizontalAlignment="Right" Width="235"/>

                    <ComboBox x:Name="serverComboBox"
                        FontFamily="/Fonts/#EB Garamond"
                        BorderThickness="0"
                        Foreground="#FFB1B1B1"
                        TabIndex="3"
                        Margin="10,119,43,0"
                        Height="24"
                        VerticalAlignment="Top">

                        <ComboBox.Resources>
                            <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
                                <Border Background="Transparent"
                                    BorderThickness="0">
                                    <Path x:Name="Arrow"
                                            Fill="#FFB1B1B1"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Data="M2.146 4.646a.5.5 0 0 1 .708 0L6 7.793l3.146-3.147a.5.5 0 1 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 0 1 0-.708"
                                            Width="9"
                                            Height="5" Stretch="Fill"/>
                                </Border>
                            </ControlTemplate>
                        </ComboBox.Resources>

                        <ComboBox.Template>
                            <ControlTemplate TargetType="ComboBox">
                                <Grid>

                                    <Border x:Name="MainBorder"
                        Background="{TemplateBinding Background}"
                        CornerRadius="3"
                        SnapsToDevicePixels="True">
                                        <Grid>
                                            <ToggleButton x:Name="ToggleButton"
                                      Template="{StaticResource ComboBoxToggleButton}"
                                      Grid.Column="2"
                                      Focusable="false"
                                      IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                      ClickMode="Press"
                                      HorizontalAlignment="Right"
                                      Width="20"/>

                                            <ContentPresenter x:Name="ContentSite"
                                          IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                          Margin="6,0,25,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"/>
                                        </Grid>
                                    </Border>

                                    <Popup x:Name="PART_Popup"
                       Placement="Bottom"
                       IsOpen="{TemplateBinding IsDropDownOpen}"
                       AllowsTransparency="True"
                       Focusable="False"
                       PopupAnimation="Slide">
                                        <Grid x:Name="DropDown"
                          SnapsToDevicePixels="True"
                          MinWidth="{TemplateBinding ActualWidth}"
                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                            <Border x:Name="DropDownBorder"
                                Background="#FF1A1A1A"/>
                                            <ScrollViewer Margin="4"
                                      SnapsToDevicePixels="True">
                                                <StackPanel IsItemsHost="True"
                                        KeyboardNavigation.DirectionalNavigation="Contained"/>
                                            </ScrollViewer>
                                        </Grid>
                                    </Popup>
                                </Grid>
                            </ControlTemplate>
                        </ComboBox.Template>

                        <ComboBox.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#FF494949"/>
                                <GradientStop Color="#FF1A1A1A" Offset="1"/>
                            </LinearGradientBrush>
                        </ComboBox.Background>

                    </ComboBox>

                    <Button x:Name="btnServerSettings" 
                    Margin="218,119,10,0" TabIndex="5" 
                    FontFamily="Noto Serif" 
                    BorderThickness="0,0,0,0" Foreground="LightGray" Click="btnServerSettings_Click" Height="24" VerticalAlignment="Top">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="2"
                                                BorderThickness="0"
                                                BorderBrush="Gray">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                <GradientStop Color="#FF5A5A5A"/>
                                                                <GradientStop Color="#FF3F3F3F" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>

                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                <GradientStop Color="#FF2A2A2A"/>
                                                                <GradientStop Color="#FF1A1A1A" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF494949"/>
                                            <GradientStop Color="#FF1A1A1A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>

                        <Path Fill="#FFB1B1B1" Data="M17.907 4.93c.104-.105.294-.186.539-.18a.85.85 0 0 1 .572.216c.13.13.222.34.231.575s-.065.413-.167.515l-7.49 7.5l-1.273.116l.1-1.245zm2.173-1.024c-.437-.438-1.037-.643-1.6-.656s-1.182.167-1.635.62l-7.682 7.692a.75.75 0 0 0-.217.47l-.194 2.407a.75.75 0 0 0 .816.807l2.43-.22a.75.75 0 0 0 .463-.218l7.682-7.692c.456-.456.627-1.073.605-1.635a2.37 2.37 0 0 0-.668-1.575M5.812 4.75a2.57 2.57 0 0 0-2.563 2.562v10.875a2.57 2.57 0 0 0 2.563 2.563h10.875a2.57 2.57 0 0 0 2.563-2.562V12.75a.75.75 0 0 0-1.5 0v5.438c0 .582-.48 1.062-1.063 1.062H5.812c-.583 0-1.063-.48-1.063-1.062V7.312c0-.582.48-1.062 1.063-1.062h5.437a.75.75 0 0 0 0-1.5z" Stretch="Fill" Width="13" Height="13"/>
                    </Button>

                    <CheckBox x:Name="cbRemember" Content="CheckBox" 
                          Margin="10,166,225,0" 
                          VerticalAlignment="Top" 
                          Foreground="#FFB1B1B1" 
                          BorderBrush="{x:Null}" 
                          OpacityMask="White" 
                          Height="16" 
                          FontFamily="EB Garamond" 
                          IsChecked="False" 
                          IsTabStop="False" 
                          TabIndex="0" 
                          Focusable="False" 
                          RenderTransformOrigin="0.5,0.5" 
                          Visibility="Visible">
                        <CheckBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </CheckBox.RenderTransform>
                        <CheckBox.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF494949"/>
                                <GradientStop Color="#FF1A1A1A" Offset="1"/>
                            </LinearGradientBrush>
                        </CheckBox.Background>
                    </CheckBox>

                    <Label x:Name="labelRemember" 
                        Content="Remember Account &amp; Password" 
                        Margin="25,160,64,0" 
                        Foreground="#FFB1B1B1" 
                        FontFamily="/Fonts/#EB Garamond" Height="24" 
                        VerticalAlignment="Top" 
                        Visibility="Visible"/>

                    <Label x:Name="labelEmail" 
                        Content="E-mail" 
                        Margin="6,94,10,0" 
                        FontFamily="/Fonts/#EB Garamond" 
                        FontSize="14" 
                        Height="32" 
                        VerticalAlignment="Top" 
                        Foreground="#FFB1B1B1" 
                        Visibility="Hidden"/>

                    <TextBox x:Name="textEmail" 
                        TabIndex="2" 
                        AllowDrop="False" 
                        TextWrapping="NoWrap" 
                        VerticalContentAlignment="Center"
                        AcceptsReturn="False"
                        VerticalAlignment="Top" 
                        Height="24" 
                        BorderBrush="{x:Null}" 
                        Foreground="#D3D3D3" 
                        Margin="10,119,10,0" 
                        FontFamily="/Fonts/#EB Garamond" 
                        FontSize="16" 
                        MaxLength="100" 
                        MaxLines="1" 
                        BorderThickness="0,0,0,0" 
                        VerticalScrollBarVisibility="Disabled" 
                        UndoLimit="10" Visibility="Hidden">

                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="2"/>
                            </Style>
                        </TextBox.Resources>

                        <TextBox.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#494949"/>
                                <GradientStop Color="#1A1A1A" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBox.Background>

                    </TextBox>




                </Grid>

            </Border>
            <Button x:Name="btnClose" Grid.Row="0"
                Grid.Column="1"
                Margin="655,10,20,115"
                RenderTransformOrigin="0.5,0.5" 
                Grid.ColumnSpan="2"
                Background="Transparent"
                BorderThickness="0" Click="btnClose_Click">
                
                <Path Fill="#D3D3D3" Stretch="Uniform"
                      Data="M12.75 11.25V5a.75.75 0 0 0-1.5 0v6.25H5a.75.75 0 0 0 0 1.5h6.25V19a.76.76 0 0 0 .75.75a.75.75 0 0 0 .75-.75v-6.25H19a.75.75 0 0 0 .75-.75a.76.76 0 0 0-.75-.75Z" 
                      RenderTransformOrigin="0.495,0.513" Height="16" Width="16">
                    <Path.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-45"/>
                            <TranslateTransform X="0" Y="0"/>
                        </TransformGroup>
                    </Path.RenderTransform>
                </Path>
            </Button>


            <Button x:Name="btnGeneralSettings" Grid.Row="0"
                Grid.Column="1"
                Margin="595,10,80,115"
                RenderTransformOrigin="0.5,0.5" 
                Grid.ColumnSpan="2"
                Background="Transparent"
                BorderThickness="0" Click="btnGeneralSettings_Click">

                <Image Source="/Images/btnGeneralSettings.png"/>
            </Button>
            <Button x:Name="btnMinimize" Grid.Row="0"
                Grid.Column="1"
                Margin="625,10,50,115"
                RenderTransformOrigin="0.5,0.5" 
                Grid.ColumnSpan="2"
                Background="Transparent"
                BorderThickness="0" Click="btnMinimize_Click">

                <Path Fill="#D3D3D3" Stretch="Uniform"
                    Data="M20 13H4a1 1 0 0 1 0-2h16a1 1 0 0 1 0 2" 
                    RenderTransformOrigin="0.495,0.513" Width="14">

                </Path>
            </Button>

        </Grid>
    </Border>

</Window>
