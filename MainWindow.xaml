<Window x:Class="DDO_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDO_Launcher"
        mc:Ignorable="d"
        Title="Dragon's Dogma Online Launcher" Height="500" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">


    <Border Background="#575555"
            CornerRadius="8" 
            Width="900"
            Height="500" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Left">

        <Border Background="#212121" 
            Margin="28,153,600,28"
            CornerRadius="5">

            <Grid>
                <TextBox x:Name="textAccount" 
                    HorizontalAlignment="Center" 
                    TextWrapping="Wrap" 
                    VerticalAlignment="Top" 
                    Width="240" 
                    AllowDrop="False" 
                    TabIndex="1" 
                    Height="24" 
                    BorderBrush="{x:Null}" 
                    Foreground="#D3D3D3" 
                    Margin="0,35,0,0" 
                       FontFamily="/Fonts/#EB Garamond" 
                    
                    Text="" FontSize="16" 
                    MaxLength="24" MaxLines="1" 
                    BorderThickness="0,0,0,0" 
                    VerticalScrollBarVisibility="Disabled" 
                    UndoLimit="10">

                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </TextBox.Resources>

                    <TextBox.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#494949"/>
                            <GradientStop Color="#1A1A1A" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBox.Background>
                </TextBox>

                <TextBox x:Name="textPassword" 
                    HorizontalAlignment="Center" 
                    TabIndex="2" 
                    AllowDrop="False" 
                    VerticalAlignment="Top" 
                    Width="240" 
                    Height="24" 
                    BorderBrush="{x:Null}" 
                    Foreground="#D3D3D3" 
                    Margin="0,89,0,0" 
                    FontFamily="/Fonts/#EB Garamond" 
                    FontSize="16" 
                    MaxLength="24" 
                    MaxLines="1" 
                    BorderThickness="0,0,0,0" 
                    VerticalScrollBarVisibility="Disabled" 
                    UndoLimit="10">

                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </TextBox.Resources>

                    <TextBox.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#494949"/>
                            <GradientStop Color="#1A1A1A" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBox.Background>

                </TextBox>

                <Button x:Name="btnLogin" 
                        Content="Login" 
                        HorizontalAlignment="Center" 
                        Margin="0,216,0,0" 
                        VerticalAlignment="Top" 
                        Width="240" TabIndex="4" 
                        Click="btnLogin_Click" 
                        Height="48" 
                        FontFamily="/Fonts/#EB Garamond" 
                        BorderThickness="0,0,0,0" 
                        FontSize="20">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="3"
                                                BorderThickness="0"
                                                BorderBrush="Gray">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                            <GradientStop Color="#FFFEEBAA"/>
                                                            <GradientStop Color="#FFF4C600" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>

                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                            <GradientStop Color="#FFE0B000"/>
                                                            <GradientStop Color="#FFB08000" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFFFDF88"/>
                                        <GradientStop Color="#FFEFB101" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    
                </Button>

                <Button x:Name="btnRegister" 
                        Content="Register" 
                        HorizontalAlignment="Left" 
                        Margin="17,275,0,0" 
                        VerticalAlignment="Top" 
                        Width="119" TabIndex="5" 
                        Height="24" 
                        Click="btnRegister_Click" 
                        FontFamily="/Fonts/#EB Garamond" 
                        BorderThickness="0,0,0,0" 
                        Foreground="#FFB1B1B1">


                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="2"
                            BorderThickness="0"
                            BorderBrush="Gray">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                            <GradientStop Color="#FF494949"/>
                                                            <GradientStop Color="#FF1A1A1A" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>

                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                            <GradientStop Color="#FF494949"/>
                                                            <GradientStop Color="#FF1A1A1A" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF494949"/>
                                        <GradientStop Color="#FF1A1A1A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                </Button>

                <Label x:Name="labelAccount" 
                       Content="Account" 
                       HorizontalAlignment="Left" 
                       Margin="12,11,0,0" 
                       VerticalAlignment="Top" 
                       Foreground="#FFB1B1B1" 
                       FontFamily="/Fonts/#EB Garamond" 
                       FontSize="14"/>

                <Label x:Name="labelPassword" 
                       Content="Password" 
                       HorizontalAlignment="Left" 
                       Margin="12,64,0,0" 
                       VerticalAlignment="Top" 
                       FontFamily="/Fonts/#EB Garamond" 
                       FontSize="14" Foreground="#FFB1B1B1"/>

                <Label x:Name="labelServer" 
                       Content="Server" 
                       Margin="12,119,206,0" 
                       FontFamily="/Fonts/#EB Garamond" 
                       FontSize="14" Height="25" VerticalAlignment="Top" Foreground="#FFB1B1B1"/>


                <ComboBox x:Name="serverComboBox" 
                  VerticalAlignment="Top" 
                          FontFamily="/Fonts/#EB Garamond" 
                  BorderThickness="0,0,0,0" 
                  Foreground="Black" 
                  HorizontalAlignment="Left" 
                  Width="208" 
                          TabIndex="3" 
                          Margin="17,146,0,0" 
                          Height="20">

                    <ComboBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </ComboBox.Resources>

                    <ComboBox.Background>

                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FF494949"/>
                            <GradientStop Color="#FF1A1A1A" Offset="1"/>
                        </LinearGradientBrush>

                    </ComboBox.Background>


                </ComboBox>

                <Border Margin="16,144,45,0"
                        BorderBrush="Gray" 
                        BorderThickness="2"
                        CornerRadius="2"
                        Background="Transparent" 
                        IsHitTestVisible="False" Height="24" VerticalAlignment="Top"
                        >
                </Border>

                <Border Background="#212121" 
                    Margin="301,-99,-576,0"
                    CornerRadius="5"/>

                <Button x:Name="btnTranslation" 
                    Margin="232,275,16,0" TabIndex="5" 
                    FontFamily="Noto Serif" 
                    BorderThickness="0,0,0,0" Foreground="LightGray" Height="24" VerticalAlignment="Top">

                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </Button.Resources>

                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF494949"/>
                            <GradientStop Color="#FF1A1A1A" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="btnInstallMods" 
                    Margin="203,275,45,0" TabIndex="5" 
                    FontFamily="Noto Serif" 
                    BorderThickness="0,0,0,0" Foreground="LightGray" Height="24" VerticalAlignment="Top">

                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </Button.Resources>

                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF494949"/>
                            <GradientStop Color="#FF1A1A1A" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="btnTranslation_Copiar" 
                    Margin="232,144,16,0" TabIndex="5" 
                    FontFamily="Noto Serif" 
                    BorderThickness="0,0,0,0" Foreground="LightGray" Height="24" VerticalAlignment="Top">

                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </Button.Resources>

                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF494949"/>
                            <GradientStop Color="#FF1A1A1A" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="85,187,0,0" VerticalAlignment="Top" Width="15" Foreground="#FFB1B1B1" BorderBrush="{x:Null}" OpacityMask="White" Height="15" FontFamily="EB Garamond" IsChecked="True" IsTabStop="False" TabIndex="0" Focusable="False" RenderTransformOrigin="0.5,0.5">
                    <CheckBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </CheckBox.RenderTransform>
                    <CheckBox.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF494949"/>
                            <GradientStop Color="#FF1A1A1A" Offset="1"/>
                        </LinearGradientBrush>
                    </CheckBox.Background>
                </CheckBox>
                <Label x:Name="labelRemember" 
                    Content="Remember me?" 
                    Margin="98,179,77,108" 
                    Foreground="#FFB1B1B1" 
                       FontFamily="/Fonts/#EB Garamond" 
                    
                    FontSize="14"/>
                <Image x:Name="imgLogo" Source="/Images/logo.png" Height="134" Margin="17,-143,16,0" VerticalAlignment="Top" IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Grid>

        </Border>

    </Border>

</Window>
